{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"outDir": "./dist",
		"moduleResolution": "Node",

		"strict": true,
		"declaration": false,
		"strictNullChecks": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["dist"]
}
